<%#= content_tag(:div, "_user_stores.html.erb: #{user_stores.class.name}") %>
<table id="stores" class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">City</th>
      <th scope="col">State</th>
      <th scope="col">Zip code</th>
      <th scope="col" class="text-center">Actions</th>
    </tr>
  </thead>
  <thead data-target="filter" class="d-none">
    <tr>
      <th scope="col"></th>
      <th data-type="store_name" scope="col">
        <!-- store_name search input box -->
      </th>
      <th data-type="street" scope="col">
        <!-- street search input box -->
      </th>
      <th data-type="city" scope="col">
        <!-- city search input box -->
      </th>
      <th data-type="state" scope="col">
        <!-- state search input box -->
      </th>
      <th data-type="zip-code" scope="col">
        <!-- zip_code search input box -->
      </th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody data-target="filter">
    <%= render partial: 'user_store', collection: user_stores, locals: { pager_params: @pager_params } %>
  </tbody>
</table>
