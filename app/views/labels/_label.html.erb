<%#= content_tag(:div, "_label.html.erb: label.class: #{label.class.name}, inspect: #{label.inspect}") %>
<tr id="<%= dom_id label %>" >
  <th scope="row"><%= pager_params.page_offset + label_counter + 1 %></th>
  <td><%= label.display_name %></td>
  <td class="text-center"><%= label.display_archived %></td>
  <td>
    <div class="fixed-width-buttons d-flex justify-content-center">
      <%= form_tag edit_label_path(label), method: :get do |f| %>
        <%= button_tag(type: :submit, class: "btn btn-outline-primary btn-sm ms-1") do %>
          <i class="bi bi-bookmark"></i> Edit
        <% end %>
      <% end %>
      <%= form_tag label_path(label), method: :get do |f| %>
        <%= button_tag(type: :submit, class: "btn btn-outline-primary btn-sm ms-1") do %>
          <i class="bi bi-eye"></i> View
        <% end %>
      <% end %>
      <% if label.archived? %>
        <%= form_tag unarchive_label_path(label), method: :post  do |f| %>
          <%= button_tag(type: :submit, class: "btn btn-outline-success btn-sm ms-1") do %>
            <i class="bi bi-cart-check"></i> Unarchive
          <% end %>
        <% end %>
      <% else %>
        <%= form_tag archive_label_path(label), method: :post do |f| %>
          <%= button_tag(type: :submit, class: "btn btn-outline-danger btn-sm ms-1") do %>
            <i class="bi bi-archive"></i> Archive
          <% end %>
        <% end %>
      <% end %>
    </div>
  </td>
</tr>
