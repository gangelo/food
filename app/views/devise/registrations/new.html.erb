<main class="devise-form form-signin m-auto">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="h1 mb-3 fw-normal">Sign up</div>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :first_name,
                  label: false,
                  required: true,
                  autofocus: true,
                  input_html: {
                                autocomplete: "given-name",
                                placeholder: "First name"
                              }
      %>
      <%= f.input :last_name,
                  label: false,
                  required: true,
                  autofocus: true,
                  input_html: {
                                autocomplete: "family-name",
                                placeholder: "Last name"
                              }
      %>
      <%= f.input :email,
                  label: false,
                  required: true,
                  autofocus: true,
                  input_html: {
                                autocomplete: "email",
                                placeholder: "Email address"
                              }
      %>
      <%= f.input :username,
                  label: false,
                  required: true,
                  autofocus: true,
                  input_html: {
                                autocomplete: "username",
                                placeholder: "Username"
                              }
      %>
      <%= f.input :password,
                  label: false,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: {
                                autocomplete: "new-password",
                                placeholder: "Password"
                              }
      %>
      <%= f.input :password_confirmation,
                  label: false,
                  required: true,
                  input_html: {
                                autocomplete: "new-password",
                                placeholder: "Password confirmation"
                              }
      %>
    </div>

    <div class="form-actions">
      <%= f.button :submit,
                   "Sign up",
                   class: "btn btn-primary",
                   data: {
                        _turbo_method: :post,
                        _turbo_visit_control: "reload",
                        _turbo_confirm: "Are you sure?"
                      }
      %>
    </div>
  <% end %>

  <div class="help-links">
    <%= render "devise/shared/links" %>
  <div>
</main>
