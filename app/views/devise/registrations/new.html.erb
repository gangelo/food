<main class="devise-form form-signin w-100 m-auto">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%#= f.error_notification %>
    <h2 class="h2 mb-3 fw-normal">Sign up</h2>
    <div class="_form-floating">
      <%= f.input :first_name,
                  label: false,
                  required: true,
                  autofocus: true,
                  input_html: {
                                autocomplete: "given-name",
                                class: "form-control",
                                placeholder: "First name"
                              }
      %>
      <%= f.input :last_name,
                  label: false,
                  required: true,
                  autofocus: true,
                  input_html: {
                                autocomplete: "family-name",
                                class: "form-control",
                                placeholder: "Last name"
                              }
      %>
    </div>
    <div class="form-floating">
      <%= f.input :email,
                  label: false,
                  required: true,
                  autofocus: true,
                  input_html: {
                                autocomplete: "email",
                                class: "form-control",
                                placeholder: "Email address"
                              }
      %>
    </div>
    <div class="form-floating">
      <%= f.input :username,
                  label: false,
                  required: true,
                  autofocus: true,
                  input_html: {
                                autocomplete: "username",
                                class: "form-control",
                                placeholder: "Username"
                              }
      %>
    </div>
    <div class="form-floating">
      <%= f.input :password,
                  label: false,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: {
                                autocomplete: "new-password",
                                class: "form-control",
                                placeholder: "Password"
                              }
      %>
    </div>
    <div class="form-floating">
      <%= f.input :password_confirmation,
                  label: false,
                  required: true,
                  input_html: {
                                autocomplete: "new-password",
                                class: "form-control",
                                placeholder: "Password confirmation"
                              }
      %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-primary w-100" %>
    </div>
  <% end %>

  <div class="help-links">
    <%= render "devise/shared/links" %>
  <div>
</main>
